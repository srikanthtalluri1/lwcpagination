 connectedCallback() {
        this.isLoading = true;   // defensive: ensure itâ€™s on
    }

renderedCallback() {
    if (this.isLoading && !this._renderedOnce) {
        this._renderedOnce = true;
        // Stop spinner after the component's first render
        requestAnimationFrame(() => { 
            this.isLoading = false; 
        });
    }
}

