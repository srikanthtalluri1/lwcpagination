import LightningDatatable from 'lightning/datatable';
import customTextTemplate from './customTextTemplate.html';
import customStatusStageTemplate from './customStatusStageTemplate.html';
import customStatusStageTemplateCSS from './customStatusStageTemplateCss.css';

export default class CustomDatatableDataTypeProvider extends LightningDatatable {
    static customTypes = {
        customText: {
            template: customTextTemplate,
            typeAttributes: ['recordId'],
        },
        customStatusStage: {
            template: customStatusStageTemplate,
            standardCellLayout: true,
            typeAttributes: [],
            cellAttributes: {
                class: 'slds-grid slds-grid_align-spread slds-grid_vertical-align-center'
            }
        }
    };
    renderedCallback(){
        super.renderedCallback();
        this.template.querySelector('.slds-scrollable_y').style.minHeight = '100%';
    }
}
