 addChildrenToFilteredValues() {
  console.log('this.requestingAppPort ', JSON.stringify(this.requestingAppPort));
  console.log('this._filteredFieldValues 317 ', JSON.stringify(this._filteredFieldValues));

  this._filteredFieldValues = (this._filteredFieldValues || []).map(filterGroup => {
    const sourceArray =
      filterGroup.filterField === 'Status'
        ? this.statusStageArray
        : filterGroup.filterField === 'Requesting App Portfolio'
          ? this.requestingAppPort
          : this.appDomainArray;

    // âœ… If filteredFieldValue is empty, build it from sourceArray
    const parentsArray =
      (filterGroup.filteredFieldValue && filterGroup.filteredFieldValue.length)
        ? filterGroup.filteredFieldValue
        : (sourceArray || []).map(cat => ({
            value: this.removeCount(cat.label),  // <-- used by your matching logic
            label: cat.label,
            count: cat.count,
            checked: false,
            children: cat.domains || []
          }));

    return {
      ...filterGroup,
      filteredFieldValue: parentsArray.map(parent => {
        const match = (sourceArray || []).find(
          cat => this.removeCount(cat.label) === parent.value
        );

        return {
          ...parent,
          children: match ? (match.domains || []) : (parent.children || [])
        };
      })
    };
  });
this._filteredFieldValues = this._filteredFieldValues.map(fg =>
  fg.filterField === 'Requesting App Portfolio'
    ? { ...fg, isApplicationStandred: true }
    : fg
);

  console.log('this._filteredFieldValues 330 ', JSON.stringify(this._filteredFieldValues));
  
}

removeCount(label) {
  return label.replace(/\s*\(\d+\)$/, '');
}

