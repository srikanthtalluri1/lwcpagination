 async fetchRecordData() {
        try {
            const data = await getRecord({ recordId: this.recordId, fields: FIELDS });
            console.log('AwpCustomPath data', JSON.stringify(data));

            this.stageValue = data.fields.Stage__c.displayValue;
            this.currentStep = data.fields.Status__c.displayValue;

            // Call your existing progress method
            this.progressMeth();

        } catch (error) {
            console.error('Error fetching record:', error);
        }
    }

    progressMeth() {
        // your existing logic here
        console.log('progress method triggered');
    }
}
