 // Row actions: Edit / Delete
    async handleRowAction(event) {
        const actionName = event.detail.action.name;
        const row = event.detail.row;

        if (actionName === 'edit') {
            // âœ… Opens Salesforce standard EDIT MODAL (same feel as New)
            this[NavigationMixin.Navigate]({
                type: 'standard__recordPage',
                attributes: {
                    recordId: row.Id,
                    objectApiName: 'TechnologyDecision_StakeHolder__c',
                    actionName: 'edit'
                }
            });
        }

        if (actionName === 'delete') {
            const ok = confirm('Are you sure you want to delete this Stakeholder record?');
            if (!ok) return;

            try {
                await deleteRecord(row.Id);
                this.dispatchEvent(
                    new ShowToastEvent({
                        title: 'Deleted',
                        message: 'Stakeholder record deleted successfully.',
                        variant: 'success'
                    })
                );
                await refreshApex(this.wiredResult);
            } catch (e) {
                this.dispatchEvent(
                    new ShowToastEvent({
                        title: 'Error',
                        message: e?.body?.message || 'Unable to delete record.',
                        variant: 'error'
                    })
                );
            }
        }
    }
