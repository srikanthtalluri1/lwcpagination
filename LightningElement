import { LightningElement, track } from 'lwc';
import pubsub from 'c/pubsub';
export default class AwpTabComponent extends LightningElement {
    @track selectedTabId='allwaivers';
    tabs = [
        { id: 'business', label: 'Business' },
        { id: 'data', label: 'Data' },
        { id: 'application', label: 'Application' },
        { id: 'technology', label: 'Technology' },
        { id: 'operation', label: 'Operation' },
        { id: 'security', label: 'Security' },
        { id: 'accessibility', label: 'Accessibility' },
        { id: 'communication', label: 'Communication' },
        { id: 'design', label: 'Design' },
        { id: 'allwaivers', label: 'All Waivers' }
    ].map(tab => ({
        ...tab,
        className: tab.id === 'allwaivers' ? 'tab selected' : 'tab' // Set default tab
    }));

    handleTabClick(event) {
        const clickedTabId = event.target.dataset.id;
        this.selectedTabId = clickedTabId;
        pubsub.publish('clickedTab', clickedTabId);

        // Update the class for tabs
        this.tabs = this.tabs.map(tab => ({
            ...tab,
            className: tab.id === clickedTabId ? 'tab selected' : 'tab'
        }));
    }
}
