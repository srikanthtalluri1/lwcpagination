        const cleaned = filtered.map(group => {
  // collect selected values for checkbox-group
  const selectedValues = [];

  return {
    ...group,

    filteredFieldValue: (group.filteredFieldValue || []).map(parent => {
      const parentRestoreKey =
        parent.id && parent.id !== 'nullcheck'
          ? parent.id
          : stripCount(parent.value || parent.label);

      const isParentChecked = checkedMap.get(parentRestoreKey) || false;

      // ðŸ‘‰ push into selectedValue if checked
      if (isParentChecked) {
        selectedValues.push(parent.value);
      }

      return {
        ...parent,
        checked: isParentChecked,

        children: (parent.children || []).map(child => {
          const childRestoreKey = stripCount(child.value || child.label);
          const isChildChecked = checkedMap.get(childRestoreKey) || false;

          return {
            ...child,
            checked: isChildChecked
          };
        })
      };
    }),

    // ðŸ”¥ THIS is what lightning-checkbox-group actually uses
    selectedValue: selectedValues
  };
});

