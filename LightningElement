public class TechnologyDecision_DataTableHandler {
	 // Method to fetch Accounts
    @AuraEnabled(cacheable=true)
    public static List<TechnologyDecision__c> getTechnologyDecision() {
        try {
            return [
                SELECT Id, Name, Status__c, Stage__c, Estimated_Decision_Date__c,Decision_Reason__c 
                FROM  TechnologyDecision__c 
				ORDER BY CreatedDate DESC 
                LIMIT 50
            ];
        } catch (Exception ex) {
            throw new AuraHandledException('Error fetching Accounts: ' + ex.getMessage());
        }
	}
}
