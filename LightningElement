<aura:component 
    implements="flexipage:availableForAllPageTypes,force:hasRecordId,lightning:actionOverride"
    access="global">

    <!-- recordId coming from the URL -->
    <aura:attribute name="recordId" type="String" />

    <!-- show spinner until LWC initializes -->
    <aura:attribute name="isLoading" type="Boolean" default="true" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="slds-p-around_none">

        <!-- OPTIONAL SPINNER -->
        <aura:if isTrue="{!v.isLoading}">
            <lightning:spinner alternative-text="Loading" size="medium"/>
        </aura:if>

        <!-- LOAD YOUR LWC -->
        <!-- Important: record-id MUST match your @api recordId -->
        <c:waiversRecordPage record-id="{!v.recordId}" />

    </div>

</aura:component>
