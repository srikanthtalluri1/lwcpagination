</template>

<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordAction</target>
    </targets>
    
</LightningComponentBundle>

import { LightningElement } from 'lwc';
import { NavigationMixin } from 'lightning/navigation'; // âœ… required import

export default class TechnologyDecisionNavigateToDecisionMg extends NavigationMixin(LightningElement) {
    connectedCallback() {
        // Automatically navigate when the quick action loads
        this[NavigationMixin.Navigate]({
            type: 'standard__navItemPage',
            attributes: {
                apiName: 'Decision_Management' // Must match your Lightning App Page API Name
            }
        });
    }
}

.custom-container{
	color : black;
}
