Schema.SObjectType objType = Schema.getGlobalDescribe().get('Account');
Schema.DescribeSObjectResult objDescribe = objType.getDescribe();
Map<String, Schema.SObjectField> fieldMap = objDescribe.fields.getMap();

String apiName = 'Industry'; // example API name
if (fieldMap.containsKey(apiName)) {
    String fieldLabel = fieldMap.get(apiName).getDescribe().getLabel();
    System.debug('Field Label: ' + fieldLabel); // "Industry"
}
