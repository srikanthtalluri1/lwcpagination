    handleSort(event) {
        const { fieldName: sortedBy, sortDirection: sortedDirection } = event.detail;
        console.log('sortedDirection==', sortedDirection);
        this.resetPaginationState();
        this.searchKey = '';
        this.sortedDirection = sortedDirection;
        this.sortedBy = sortedBy;
        this.currentPage = 1;
        console.log('this.sortedBy ', this.sortedBy);
        if(this.sortedBy == 'statusStage'){
            this.sortedBy='Status__c';
        }//
        /*Lazy Loading*/
        this.rowOffSet = 0;
        this.records = [];
            /*Lazy Loading*/
        this.fetchDataAsync();
    }


