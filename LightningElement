handleCancel() {
    const childComponent = this.template.querySelector('c-awpwaiver-create-record-page');
    if (childComponent) {
        childComponent.resetForm();
    }
    this.closeModal(); // or any other modal close logic
}

handleSave() {
    const childComponent = this.template.querySelector('c-awpwaiver-create-record-page');
    if (childComponent) {
        childComponent.submitForm();
    }
}
