 spinnerStartTime;

    connectedCallback() {
        this.startProcess();
    }

    startProcess() {
        // Show spinner and record start time
        this.showSpinner = true;
        this.spinnerStartTime = Date.now();

        // Simulate async call (e.g., Apex call that finishes in 1 second)
        setTimeout(() => {
            this.endProcess();
        }, 1000);
    }

    endProcess() {
        const elapsed = Date.now() - this.spinnerStartTime;
        const minDisplayTime = 2000; // 2 seconds

        if (elapsed < minDisplayTime) {
            // Wait the remaining time before hiding spinner
            setTimeout(() => {
                this.showSpinner = false;
            }, minDisplayTime - elapsed);
        } else {
            // Enough time passed, hide immediately
            this.showSpinner = false;
        }
    }s
