public class TechnologyDecision_RelatedListHandler {

	@AuraEnabled(cacheable=true)
public static List<TechnologyDecision_Relationship__c> fetchRelated(Id parentId) {
    return [
        SELECT Id, Name, CreatedDate
        FROM TechnologyDecision_Relationship__c
        WHERE TechnologyDecision__c = :parentId
        ORDER BY CreatedDate DESC
    ];
}


}
