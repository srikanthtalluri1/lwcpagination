private static String buildLink(String linkId) {
        String formattedURL = 'N/A';
        
        if (String.isBlank(linkId)) {
            return ''; // Return an empty string if linkId is null or blank
        }
        
        String baseUrl = System.Url.getOrgDomainUrl().toExternalForm(); // Use new method
        formattedURL = baseUrl + '/' + linkId;
        
        return formattedURL;
    }
